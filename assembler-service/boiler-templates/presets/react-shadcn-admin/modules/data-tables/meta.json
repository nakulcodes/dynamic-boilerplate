{
  "name": "data-tables",
  "displayName": "Advanced Data Tables",
  "description": "Feature-rich data tables with sorting, filtering, pagination, column visibility, and export functionality using TanStack Table",
  "category": "ui-components",
  "required": false,
  "deps": {
    "@tanstack/react-table": "^8.20.6",
    "date-fns": "^3.6.0",
    "papaparse": "^5.4.1",
    "xlsx": "^0.18.5",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2"
  },
  "devDeps": {
    "@types/papaparse": "^5.3.15"
  },
  "env": [],
  "conflicts": [],
  "inject": {
    "src/App.tsx": {
      "imports": [
        "import { DataTableDemo } from '@/pages/DataTableDemo';"
      ],
      "routes": [
        "          <Route path=\"/tables\" element={<ProtectedRoute><DataTableDemo /></ProtectedRoute>} />"
      ]
    }
  },
  "features": [
    "Server-side and client-side pagination",
    "Multi-column sorting",
    "Global and column-specific filtering",
    "Column visibility toggle",
    "Row selection with bulk actions",
    "Export to CSV and Excel",
    "Responsive design with mobile view",
    "Custom cell renderers",
    "Resizable columns",
    "Virtual scrolling for large datasets",
    "TypeScript support"
  ]
}